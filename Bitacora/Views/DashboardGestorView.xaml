<UserControl x:Class="Bitacora.Views.DashboardGestorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Bitacora.Models"
             Background="Transparent">
    <Grid Margin="20,10,20,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="5" Padding="10" CornerRadius="10" Background="{StaticResource CardBackground}">
            <StackPanel>
                <TextBlock Text="Total Registros" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                <TextBlock x:Name="TotalText" Text="0" FontSize="19" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Margin="5" Padding="10" CornerRadius="10" Background="{StaticResource CardBackground}">
            <StackPanel>
                <TextBlock Text="Pendientes" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                <TextBlock x:Name="PendientesText" Text="0" FontSize="19" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Margin="5" Padding="10" CornerRadius="10" Background="{StaticResource CardBackground}">
            <StackPanel>
                <TextBlock Text="En Proceso" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                <TextBlock x:Name="EnProcesoText" Text="0" FontSize="19" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="3" Margin="5" Padding="10" CornerRadius="10" Background="{StaticResource CardBackground}">
            <StackPanel>
                <TextBlock Text="Cerrados" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                <TextBlock x:Name="CerradosText" Text="0" FontSize="19" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
