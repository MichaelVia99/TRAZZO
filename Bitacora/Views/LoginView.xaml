<UserControl x:Class="Bitacora.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Border Background="{StaticResource GlassBackground}" 
            CornerRadius="10" 
            BorderThickness="0"
            Width="400"
            Margin="0"
            ClipToBounds="False"
            
            Effect="{StaticResource ElevatedShadow}">

        <Grid VerticalAlignment="Center" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,15,0,15">
                <Image Source="/logo.png"
                       Width="70"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"/>
                <TextBlock Text="Trazzo" 
                           FontSize="40" 
                           FontWeight="Bold" 
                           Foreground="#2c4f6d" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Bitácora de Requerimientos e Incidentes" 
                           FontSize="9" 
                           FontWeight="SemiBold" 
                           Foreground="#2c4f6d"/>
            </StackPanel>

            <Border Grid.Column="1"
                    Margin="0,10"
                    Background="#DDDDDD"/>

            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,10,0,15">
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="¡Hola de nuevo!" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextDarkBrush}" 
                               Margin="0,0,0,0"/>
                    <TextBlock Text="Ingresa a tu panel de control" 
                               FontSize="10" 
                               Foreground="{StaticResource TextGrayBrush}"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,0" MaxWidth="200" HorizontalAlignment="Left">
                    <TextBox x:Name="UsuarioTextBox" 
                             Text="gestor1@sertech.pe"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Margin="0,0,0,5"/>

                    <PasswordBox x:Name="PasswordBox"
                                 Password="123456"
                                 Style="{StaticResource RoundedPasswordBoxStyle}"
                                 Margin="0,0,0,5"/>

                    <Button x:Name="LoginButton"
                            Click="LoginButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Viewbox Width="16" Height="16" Margin="0,0,8,0">
                                <Canvas Width="26" Height="26">
                                    <Path Data="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" 
                                          Stroke="White" 
                                          StrokeThickness="2" 
                                          StrokeLineJoin="Round" 
                                          StrokeStartLineCap="Round" 
                                          StrokeEndLineCap="Round" 
                                          Fill="Transparent"/>
                                    <Path Data="M10 17l5-5-5-5" 
                                          Stroke="White" 
                                          StrokeThickness="2" 
                                          StrokeLineJoin="Round" 
                                          StrokeStartLineCap="Round" 
                                          StrokeEndLineCap="Round"/>
                                    <Path Data="M15 12H3" 
                                          Stroke="White" 
                                          StrokeThickness="2" 
                                          StrokeLineJoin="Round" 
                                          StrokeStartLineCap="Round" 
                                          StrokeEndLineCap="Round"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Iniciar Sesión" FontSize="10"
                                       Foreground="White"/>
                        </StackPanel>
                    </Button>

                    <TextBlock x:Name="ErrorTextBlock"
                               Text="Credenciales no válidas. Intenta de nuevo." 
                               FontSize="9" 
                               Foreground="Red" 
                               HorizontalAlignment="Center"
                               Opacity="0.8"
                               Visibility="Hidden"/>

                    <Button x:Name="ExitButton"
                            Click="ExitButton_Click"
                            Cursor="Hand"
                            Background="{StaticResource SecundaryButtonBackground}"
                            BorderThickness="0"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" Padding="10,5" CornerRadius="5">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#10000000"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Viewbox Width="14" Height="14" Margin="0,0,6,0">
                                <Canvas Width="26" Height="26">
                                    <Path Data="M18.36 6.64a9 9 0 1 1-12.73 0" 
                                          Stroke="{StaticResource TextGrayBrush}" 
                                          StrokeThickness="2" 
                                          StrokeLineJoin="Round" 
                                          StrokeStartLineCap="Round" 
                                          StrokeEndLineCap="Round" 
                                          Fill="Transparent"/>
                                    <Path Data="M12 2v10" 
                                          Stroke="{StaticResource TextGrayBrush}" 
                                          StrokeThickness="2" 
                                          StrokeLineJoin="Round" 
                                          StrokeStartLineCap="Round" 
                                          StrokeEndLineCap="Round"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Cerrar Aplicación" 
                                       FontSize="10"
                                       Foreground="{StaticResource TextGrayBrush}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
