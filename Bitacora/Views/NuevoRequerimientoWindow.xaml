<Window x:Class="Bitacora.Views.NuevoRequerimientoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Requerimiento"
        Height="530"
        Width="800"
        MaxWidth="800"
        MinHeight="300"
        MinWidth="800"
        MaxHeight="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">
    <Grid Background="Transparent">
        <Border Background="{StaticResource GlassBackground}"
                CornerRadius="10"
                BorderBrush="{StaticResource GlassBorder}"
                BorderThickness="6"
                Effect="{StaticResource ElevatedShadow}"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="TitleTextBlock"
                               Text="Nuevo Requerimiento" 
                               FontSize="13" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimary}"/>
                    
                    <Button Grid.Column="1"
                            Width="30" Height="25"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Cursor="Hand">
                         <Button.Content>
                             <Path Data="M1,1 L9,9 M9,1 L1,9" 
                                   Stroke="{StaticResource TextSecondary}" 
                                   StrokeThickness="1.5"
                                   Stretch="Uniform"
                                   Width="10" Height="10"/>
                         </Button.Content>
                         <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#20E74C3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Contenido -->
                <ContentControl x:Name="FormContent" Grid.Row="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>
