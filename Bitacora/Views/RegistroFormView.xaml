<UserControl x:Class="Bitacora.Views.RegistroFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Bitacora.Converters"
             xmlns:models="clr-namespace:Bitacora.Models"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Background="Transparent"
             TextOptions.TextFormattingMode="Display"
             RenderOptions.BitmapScalingMode="HighQuality"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">
    <UserControl.Resources>
        <converters:MathConverter x:Key="MathConverter"/>
        <converters:StringToBooleanConverter x:Key="StringToBooleanConverter"/>
        <converters:PathTokenToThumbnailConverter x:Key="PathTokenToThumbnailConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- New Simplified Hierarchy Styles -->
        <Style x:Key="TreeLineStyle" TargetType="Rectangle">
            <Setter Property="Width" Value="2"/>
            <Setter Property="Fill" Value="#999999"/>
            <!-- Nivel 1 (Hijos de Root) -> Azul -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Nivel}" Value="1">
                    <Setter Property="Fill" Value="#007ACC"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Nivel}" Value="2">
                    <Setter Property="Fill" Value="#E65100"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ParentStubStyle" TargetType="Rectangle">
            <Setter Property="Width" Value="2"/>
            <Setter Property="Fill" Value="#999999"/>
            <Style.Triggers>
                <!-- Root (Nivel 0) connects to L1 (Blue) -->
                <DataTrigger Binding="{Binding Nivel}" Value="0">
                    <Setter Property="Fill" Value="#007ACC"/>
                </DataTrigger>
                <!-- L1 connects to L2 (Orange) -->
                <DataTrigger Binding="{Binding Nivel}" Value="1">
                    <Setter Property="Fill" Value="#E65100"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="TaskTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- Tree Lines (Column 0) -->
                <Grid Grid.Column="0" Grid.RowSpan="2" Width="18" ClipToBounds="False">
                    <!-- Vertical Line (Top Half - Always visible for subtasks) -->
                    <!-- Connects from top to center (L-shape corner) -->
                    <Rectangle Width="2"
                               HorizontalAlignment="Left"
                               Margin="8,0,0,0"
                               Height="15"
                               VerticalAlignment="Top">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle" BasedOn="{StaticResource TreeLineStyle}">
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsFirstChild}" Value="True"/>
                                            <Condition Binding="{Binding Nivel}" Value="0"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                    
                    <!-- Vertical Line (Bottom Half - Connects to next sibling) -->
                    <!-- Visible ONLY if NOT Last Child -->
                    <Rectangle Width="2"
                               HorizontalAlignment="Left"
                               Margin="8,15,0,0"
                               VerticalAlignment="Stretch">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle" BasedOn="{StaticResource TreeLineStyle}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLastChild}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                    
                    <!-- Horizontal Line (Connects Vertical to Card) -->
                    <Rectangle Height="2"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Stretch"
                               Margin="8,14,0,0">
                         <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Fill" Value="#999999"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Nivel}" Value="1">
                                        <Setter Property="Fill" Value="#007ACC"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Nivel}" Value="2">
                                        <Setter Property="Fill" Value="#E65100"/>
                                    </DataTrigger>
                                    <!-- Visible for Nivel 0 to connect spine to card -->
                                </Style.Triggers>
                            </Style>
                         </Rectangle.Style>
                    </Rectangle>
                </Grid>

                <!-- Tarjeta de Tarea -->
                <Grid Grid.Column="1" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Expander / Stub Container (Col 0) -->
                    <Grid Grid.Column="0" Width="18">
                        <!-- Horizontal Connector (Left to Center) -->
                        <Rectangle Height="2"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Margin="0,14,0,0">
                             <Rectangle.Style>
                                <Style TargetType="Rectangle">
                                    <Setter Property="Fill" Value="#999999"/>
                                    <Setter Property="Width" Value="18"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Nivel}" Value="1">
                                            <Setter Property="Fill" Value="#007ACC"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Nivel}" Value="2">
                                            <Setter Property="Fill" Value="#E65100"/>
                                        </DataTrigger>
                                        <!-- Always full width to connect to card -->
                                    </Style.Triggers>
                                </Style>
                             </Rectangle.Style>
                        </Rectangle>

                        <!-- Línea Conector Vertical para Hijos (Parent Stub) -->
                        <Rectangle HorizontalAlignment="Left" 
                                   VerticalAlignment="Stretch" 
                                   Width="2"
                                   Margin="8,14,0,0">
                            <Rectangle.Style>
                                <Style TargetType="Rectangle" BasedOn="{StaticResource ParentStubStyle}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding HasChildren}" Value="True"/>
                                                <Condition Binding="{Binding IsExpanded}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Rectangle.Style>
                        </Rectangle>

                        <!-- Toggle Button (Accordion) moved inside card -->
                        <!-- Placeholder to keep grid consistent if needed -->
                    </Grid>

                    <Border Grid.Column="1" Background="White" CornerRadius="6" BorderThickness="1" BorderBrush="#E0E0E0" Padding="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Margin" Value="0,0,0,-5"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Nivel}" Value="1">
                                        <Setter Property="Margin" Value="0,2,0,4"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Direction="270" Color="#F0F0F0" Opacity="0.5"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Nivel}" Value="0">
                                        <Setter Property="Margin" Value="0,2,0,0"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Direction="270" Color="#F0F0F0" Opacity="0.5"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Toggle Button (Accordion) - Moved inside the card -->
                            <ToggleButton Grid.Row="0" Grid.Column="0" 
                                          IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                          Margin="2,4,4,0"
                                          VerticalAlignment="Top"
                                          Width="20" Height="20"
                                          Background="Transparent"
                                          BorderThickness="0">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="Transparent">
                                                        <Path x:Name="Arrow"
                                                              Data="M 4 0 L 0 4 L 4 8"
                                                              Stroke="#666"
                                                              StrokeThickness="2"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RenderTransformOrigin="0.5,0.5">
                                                            <Path.RenderTransform>
                                                                <RotateTransform Angle="0"/>
                                                            </Path.RenderTransform>
                                                        </Path>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                         Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                                         To="-90" Duration="0:0:0.2"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                         Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                                         To="0" Duration="0:0:0.2"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasChildren}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                        <!-- Botones de Acción (Superior Derecha) -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top"  Panel.ZIndex="10" Margin="0,2,6,0">
                            <!-- Botón Adjuntar -->
                            <Button Background="Transparent" BorderThickness="0" Margin="0,2,8,0" Cursor="Hand" Click="AddTaskAttachment_Click" ToolTip="Adjuntar archivo" Visibility="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Viewbox Width="14" Height="14">
                                    <Path Data="M16.5,6v11.5c0,2.21-1.79,4-4,4s-4-1.79-4-4V5c0-1.38,1.12-2.5,2.5-2.5s2.5,1.12,2.5,2.5v10.5c0,0.55-0.45,1-1,1s-1-0.45-1-1V6H10v9.5c0,1.38,1.12,2.5,2.5,2.5s2.5-1.12,2.5-2.5V5c0-2.21-1.79-4-4-4S7,2.79,7,5v12.5c0,3.04,2.46,5.5,5.5,5.5s5.5-2.46,5.5-5.5V6H16.5z" 
                                          Fill="#555555"/>
                                </Viewbox>
                            </Button>
                            
                            <!-- Botón Eliminar -->
                            <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Click="DeleteTask_Click" ToolTip="Eliminar tarea" Margin="0,0,0,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRemovable}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Viewbox Width="14" Height="14">
                                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                          Fill="#E74C3C"/>
                                </Viewbox>
                            </Button>
                        </StackPanel>

                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="10" 
                                 BorderThickness="0" 
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Padding="4,4,4,0"
                                 Margin="6,0,50,2"
                                 MinHeight="20"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Campo requerido" Foreground="{StaticResource NewButtonRedBrush}" FontSize="9" Margin="2,0,0,2" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasError}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Adjuntos de la tarea -->
                        <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding ArchivosList}" Margin="6,0,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Botón para abrir vista previa -->
                                        <Button Grid.Column="0"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="0,0,5,0"
                                                Cursor="Hand"
                                                Click="OpenTaskAttachment_Click"
                                                Tag="{Binding}"
                                                ToolTip="Ver archivo">
                                            <Grid>
                                                <Image Source="{Binding Converter={StaticResource PathTokenToThumbnailConverter}}"
                                                       Width="32"
                                                       Height="32"
                                                       Stretch="UniformToFill">
                                                    <Image.Style>
                                                        <Style TargetType="Image">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Value="True">
                                                                    <DataTrigger.Binding>
                                                                        <Binding Converter="{StaticResource PathToIsImageConverter}"/>
                                                                    </DataTrigger.Binding>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                                <Viewbox Width="20"
                                                         Height="20"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         Margin="7,0">
                                                    <Viewbox.Style>
                                                        <Style TargetType="Viewbox">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Value="True">
                                                                    <DataTrigger.Binding>
                                                                        <Binding Converter="{StaticResource PathToIsImageConverter}"/>
                                                                    </DataTrigger.Binding>
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Viewbox.Style>
                                                    <Canvas Width="24" Height="24">
                                                        <Path Data="M7 3 H15 L19 7 V21 H7 Z"
                                                              Stroke="#777"
                                                              StrokeThickness="2"
                                                              StrokeLineJoin="Round"
                                                              Fill="Transparent"/>
                                                        <Path Data="M15 3 V7 H19"
                                                              Stroke="#777"
                                                              StrokeThickness="2"
                                                              StrokeLineJoin="Round"
                                                              Fill="Transparent"/>
                                                    </Canvas>
                                                </Viewbox>
                                            </Grid>
                                        </Button>

                                        <!-- Nombre del archivo y tamaño -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Converter={StaticResource PathToFileNameConverter}}" 
                                                       ToolTip="{Binding}"
                                                       FontSize="10" 
                                                       Foreground="{StaticResource PathLink}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Converter={StaticResource PathTokenToSizeMbConverter}}"
                                                       FontSize="9"
                                                       Foreground="{StaticResource TextSecondary}"/>
                                        </StackPanel>

                                        <!-- Botón eliminar -->
                                        <Button Grid.Column="2" 
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="5,0,0,0"
                                                Cursor="Hand"
                                                Click="RemoveTaskFile_Click"
                                                Tag="{Binding}"
                                                ToolTip="Eliminar archivo"
                                                VerticalAlignment="Center"
                                                Padding="2"
                                                Visibility="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Viewbox Width="14" Height="14" VerticalAlignment="Center">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M6 6 L18 18"
                                                          Stroke="{StaticResource NewButtonRedBrush}"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
                                                    <Path Data="M18 6 L6 18"
                                                          Stroke="{StaticResource NewButtonRedBrush}"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Metadata: Inicio, Fin, Estimado -->
                        <Border Grid.Row="2" Grid.Column="1" Margin="0,2,0,0" Background="#FAFAFA" BorderThickness="0.5" BorderBrush="#E0E0E0" CornerRadius="0,0,6,6" Padding="6,5" IsEnabled="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="{x:Type DatePickerTextBox}">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                                                    <Grid Background="Transparent">
                                                        <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" />
                                                        <TextBlock x:Name="Message" Text="Seleccionar" 
                                                                   Visibility="Collapsed" 
                                                                   Foreground="Gray" 
                                                                   FontStyle="Italic"
                                                                   VerticalAlignment="Center" 
                                                                   Margin="4,0,0,0"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter TargetName="Message" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Inicio -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="2,0,5,0" VerticalAlignment="Center">
                                        <Viewbox Width="13" Height="13" Margin="0,0,4,0" VerticalAlignment="Center">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20a2 2 0 0 0 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zm0-12H5V6h14v2zm-7 5h5v5h-5z" 
                                                      Fill="#4CAF50"/>
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock Text="Inicio" FontSize="9"  VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Edit Mode -->
                                    <Border BorderThickness="1" BorderBrush="#E0E0E0" Background="White" CornerRadius="2" Height="25" Width="90" VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasChildren}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <DatePicker SelectedDate="{Binding FechaInicio}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent" Padding="4,0"/>
                                    </Border>
                                    
                                    <!-- ReadOnly Mode -->
                                    <TextBlock Text="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" FontSize="10" VerticalAlignment="Center" Margin="4,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasChildren}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Fin -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="2,0,5,0" VerticalAlignment="Center">
                                        <Viewbox Width="13" Height="13" Margin="0,0,4,0" VerticalAlignment="Center">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20a2 2 0 0 0 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zm0-12H5V6h14v2zm-7 5h5v5h-5z" 
                                                      Fill="#E74C3C"/>
                                            </Canvas>
                                        </Viewbox>
                                        <TextBlock Text="Fin" FontSize="9" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Edit Mode -->
                                    <Border BorderThickness="1" BorderBrush="#E0E0E0" Background="White" CornerRadius="2" Height="25" Width="90" VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasChildren}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <DatePicker SelectedDate="{Binding FechaFin}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent" Padding="4,0"/>
                                    </Border>

                                    <!-- ReadOnly Mode -->
                                    <TextBlock Text="{Binding FechaFin, StringFormat=dd/MM/yyyy}" FontSize="10" VerticalAlignment="Center" Margin="4,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasChildren}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Estimado y Acciones -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- Etiqueta Estimado -->
                                    <StackPanel Orientation="Horizontal"  Margin="2,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <Viewbox Width="13" Height="13" Margin="0,0,4,0" VerticalAlignment="Center">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" 
                                                      Fill="#F57C00"/>
                                            </Canvas>
                                        </Viewbox>
                                        
                                        <TextBlock Text="Estimado" FontSize="9" VerticalAlignment="Center" />
                                    </StackPanel>

                                    <!-- Input Estimado (Edit) -->
