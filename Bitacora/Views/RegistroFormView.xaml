                                 Foreground="{StaticResource TextPrimary}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinHeight="37"
                                 VerticalContentAlignment="Top">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                            Margin="{TemplateBinding Padding}"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <Viewbox Grid.Column="1" 
                                 Width="14"
                                 Height="14"
                                 VerticalAlignment="Top" 
                                 Margin="0,8,8,0"
                                 Visibility="{Binding DescripcionError, Converter={StaticResource StringToVisibilityConverter}}">
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="18" Height="18"
                                         Stroke="#E74C3C"
                                         StrokeThickness="2"
                                         Canvas.Left="3"
                                         Canvas.Top="3"/>
                                <Path Data="M12 8 L12 13"
                                      Stroke="#E74C3C"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                                <Path Data="M12 16 L12.01 16"
                                      Stroke="#E74C3C"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                            </Canvas>
                        </Viewbox>
                    </Grid>
                </Border>
                <TextBlock Text="{Binding DescripcionError}" 
                           Foreground="{StaticResource NewButtonRedBrush}" 
                           FontSize="8" 
                           Margin="0,0,0,0"
                           Visibility="{Binding DescripcionError, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Tareas (Opcional) -->
              
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="Tareas" 
                                   FontSize="10" 
                                   FontWeight="Medium">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TareasError, Converter={StaticResource StringToBooleanConverter}}" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource NewButtonRedBrush}"/>
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Tareas.Count}" Value="0"/>
                                                <Condition Binding="{Binding IsEditMode}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Lista de Tareas -->
                        <ItemsControl ItemsSource="{Binding Tareas}" ItemTemplate="{StaticResource TaskTemplate}" Margin="0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel>
                                        <i:Interaction.Behaviors>
                                            <i:FluidMoveBehavior Duration="0:0:0.3" AppliesTo="Children"/>
                                        </i:Interaction.Behaviors>
                                    </StackPanel>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <Button Click="AddTask_Click"
                                HorizontalAlignment="Left"
                                FontSize="10"
                                Background="{StaticResource PrimaryOrangeLightBrush}"
                                BorderBrush="{StaticResource InputBorderBrush}"
                                BorderThickness="1"
                                Foreground="White"
                                Padding="10,4"
                                Margin="0,0,0,0"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                            <TextBlock Text="+ Agregar Tarea"
                                       Foreground="White"/>
                        </Button>
                    </StackPanel>
              

                
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="290"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <!-- Asignar a -->
                        <TextBlock Text="Asignar a" 
                                   FontSize="10" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,2">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DevError, Converter={StaticResource StringToBooleanConverter}}" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource NewButtonRedBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Border CornerRadius="5"
                                Background="White"
                                BorderThickness="1"
                                Padding="1"
                                Margin="0,0,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DevError, Converter={StaticResource StringToBooleanConverter}}" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource NewButtonRedBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsEditMode}" Value="False">
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="DevComboBox"
                                          Grid.Column="0"
                                          Padding="3"
                                          FontSize="10"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Foreground="{StaticResource TextPrimary}"
                                          DisplayMemberPath="Nombre"
                                          IsEditable="True"
                                          IsTextSearchEnabled="False"
                                          StaysOpenOnEdit="True"
                                          Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <TextBox Grid.Column="0"
                                         Text="{Binding Text, ElementName=DevComboBox, Mode=OneWay}"
                                         Padding="3"
                                         FontSize="10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{StaticResource TextPrimary}"
                                         IsReadOnly="True">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditMode}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <!-- Icono de Error -->
                                <Viewbox Grid.Column="1" 
                                         Width="14"
                                         Height="14"
                                         VerticalAlignment="Center" 
                                         Margin="7,0,7,0"
                                         IsHitTestVisible="False"
                                         Visibility="{Binding DevError, Converter={StaticResource StringToVisibilityConverter}}">
                                    <Canvas Width="24" Height="24">
                                        <Ellipse Width="18" Height="18"
                                                 Stroke="{StaticResource NewButtonRedBrush}"
                                                 StrokeThickness="2"
                                                 Canvas.Left="3"
                                                 Canvas.Top="3"/>
                                        <Path Data="M12 8 L12 13"
                                              Stroke="{StaticResource NewButtonRedBrush}"
                                              StrokeThickness="2"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"/>
                                        <Path Data="M12 16 L12.01 16"
                                              Stroke="{StaticResource NewButtonRedBrush}"
                                              StrokeThickness="2"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"/>
                                    </Canvas>
                                </Viewbox>
                            </Grid>

                        </Border>
                        <TextBlock Text="{Binding DevError}" 
                                   Foreground="{StaticResource NewButtonRedBrush}" 
                                   FontSize="8" 
                                   Margin="0,0,0,0"
                                   Visibility="{Binding DevError, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasTareas}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Text, ElementName=HorasTextBox}" Value="0"/>
                                            <Condition Binding="{Binding Text, ElementName=MinutosTextBox}" Value="0"/>
                                            <Condition Binding="{Binding IsEditMode}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <!-- Tiempo Estimado (Opcional) -->
                        <TextBlock Text="Tiempo Estimado (Opcional)" 
                                   FontSize="10" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,2"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Horas -->
                            <StackPanel Grid.Column="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" CornerRadius="4,0,0,4"
                                            Background="White"
                                            BorderThickness="1,1,0,1"
                                            BorderBrush="{StaticResource InputBorderBrush}"
                                            Padding="1">
                                        <TextBox x:Name="HorasTextBox" 
                                                 Padding="3"
                                                 FontSize="10"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Foreground="{StaticResource TextPrimary}"
                                                 MaxLength="3"
                                                 PreviewTextInput="NumberValidationTextBox"
                                                 VerticalContentAlignment="Center"
                                                 Text="0"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1"
                                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Click="BtnIncreaseHours_Click" Height="12" Width="20" Background="#FAFAFA" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0,1,1,0" Padding="0" Cursor="Hand">
                                            <Viewbox Width="10" Height="10">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M12 6 L12 18"
                                                          Stroke="#666"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
                                                    <Path Data="M6 12 L18 12"
                                                          Stroke="#666"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button Click="BtnDecreaseHours_Click" Height="12" Width="20" Background="#FAFAFA" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0,1,1,1" Padding="0" Cursor="Hand">
                                            <Viewbox Width="10" Height="10">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M6 12 L18 12"
                                                          Stroke="#666"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <TextBlock Text="Horas" 
                                           FontSize="9" 
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>

                            <!-- Minutos -->
                            <StackPanel Grid.Column="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" CornerRadius="4,0,0,4"
                                            Background="White"
                                            BorderThickness="1,1,0,1"
                                            BorderBrush="{StaticResource InputBorderBrush}"
                                            Padding="1">
                                        <TextBox x:Name="MinutosTextBox" 
                                                 Padding="3"
                                                 FontSize="10"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Foreground="{StaticResource TextPrimary}"
                                                 MaxLength="2"
                                                 PreviewTextInput="NumberValidationTextBox"
                                                 VerticalContentAlignment="Center"
                                                 Text="0"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Click="BtnIncreaseMinutes_Click" Height="12" Width="20" Background="#FAFAFA" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0,1,1,0" Padding="0" Cursor="Hand">
                                            <Viewbox Width="10" Height="10">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M12 6 L12 18"
                                                          Stroke="#666"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
                                                    <Path Data="M6 12 L18 12"
                                                          Stroke="#666"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                        <Button Click="BtnDecreaseMinutes_Click" Height="12" Width="20" Background="#FAFAFA" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0,1,1,1" Padding="0" Cursor="Hand">
                                            <Viewbox Width="10" Height="10">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M6 12 L18 12"
                                                          Stroke="#666"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <TextBlock Text="Minutos" 
                                           FontSize="9" 
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>

                

                <!-- Adjuntos (Opcional) -->
                <StackPanel Orientation="Horizontal" Margin="0,8,0,2">
                        <TextBlock Text="Adjuntar Archivos (Opcional)" 
                               FontSize="10" 
                               FontWeight="Medium"
                               Foreground="{StaticResource TextSecondary}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Adjuntos.Count}" Value="0"/>
                                                <Condition Binding="{Binding IsEditMode}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                
                
                
                <StackPanel Margin="0,0,0,0">
                    <Button x:Name="AdjuntarButton"
                            HorizontalAlignment="Left"
                            FontSize="10"
                            Background="{StaticResource PrimaryOrangeLightBrush}"
                            BorderBrush="{StaticResource InputBorderBrush}"
                            BorderThickness="1"
                            Foreground="White"
                            Padding="10,4"
                            Click="AdjuntarButton_Click"
                            Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                        <TextBlock Text="+ Agregar Archivos"
                                   Foreground="White"/>
                    </Button>
                    
                    <ListBox x:Name="AdjuntosListBox" 
                             ItemsSource="{Binding Adjuntos}"
                             Margin="20,2,0,0" 
                             BorderThickness="0" 
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Grid.Column="0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="0,0,5,0"
                                            Cursor="Hand"
                                            Click="OpenAttachment_Click"
                                            ToolTip="Ver archivo">
                                        <Grid>
                                            <Image Source="{Binding ThumbnailPath}"
                                                   Width="32"
                                                   Height="32"
                                                   Stretch="UniformToFill">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsImage}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                            <Viewbox Width="20"
                                                     Height="20"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Margin="6,0">
                                                <Viewbox.Style>
                                                    <Style TargetType="Viewbox">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsImage}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Viewbox.Style>
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M7 3 H15 L19 7 V21 H7 Z"
                                                          Stroke="#777"
                                                          StrokeThickness="2"
                                                          StrokeLineJoin="Round"
                                                          Fill="Transparent"/>
                                                    <Path Data="M15 3 V7 H19"
                                                          Stroke="#777"
                                                          StrokeThickness="2"
                                                          StrokeLineJoin="Round"
                                                          Fill="Transparent"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </Button>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding FileName}" 
                                                   ToolTip="{Binding OriginalPath}"
                                                   FontSize="10" 
                                                   Foreground="{StaticResource PathLink}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding SizeMbText}"
                                                   FontSize="9"
                                                   Foreground="{StaticResource TextSecondary}"/>
                                    </StackPanel>
                                    <Button Grid.Column="2" 
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="5,0,0,0"
                                            Cursor="Hand"
                                            Click="RemoveAttachment_Click"
                                            ToolTip="Eliminar archivo"
                                            Visibility="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Viewbox Width="12" Height="12" VerticalAlignment="Center">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M6 6 L18 18"
                                                      Stroke="#E74C3C"
                                                      StrokeThickness="2"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"/>
                                                <Path Data="M18 6 L6 18"
                                                      Stroke="#E74C3C"
                                                      StrokeThickness="2"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"/>
                                            </Canvas>
                                        </Viewbox>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Botón Guardar fuera del scroll -->
        <Border Grid.Row="1"
                Background="Transparent"
                Padding="0,3,0,0">
            <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                    <TextBlock Text="{Binding AttachmentUsageText}" 
                       FontSize="9" 
                       Foreground="{StaticResource TextSecondary}"
                       Margin="10,0,0,0"
                       VerticalAlignment="Bottom"/>
                                    </StackPanel>

                                    <ProgressBar Value="{Binding AttachmentProgress}" 
                     Maximum="100" 
                     Height="4" 
                     Margin="5,0,5,7" 
                     Background="#EEE" 
                     BorderThickness="0">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Foreground" Value="{StaticResource PrimaryOrangeBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding AttachmentProgress}" Value="100">
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AttachmentProgress}" Value="90">
                                    <Setter Property="Foreground" Value="#E67E22"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
                <!-- Mensaje de Error -->
                <TextBlock Text="{Binding ErrorMessage}" 
                    Foreground="#E74C3C" 
                    FontSize="8" 
                    FontWeight="SemiBold"
                    TextWrapping="Wrap"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Button x:Name="GuardarButton"
                        Click="GuardarButton_Click"
                        Cursor="Hand"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button.Background>
                        <StaticResource ResourceKey="PrimaryOrangeBrush"/>
                    </Button.Background>
                    <Button.Foreground>
                        <SolidColorBrush Color="White"/>
                    </Button.Foreground>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryOrangeLightBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Icono Guardar -->
                        <Viewbox x:Name="IconoGuardar" Width="16" Height="16" Margin="0,0,5,0">
                            <Canvas Width="20" Height="20">
                                <Path Data="M6 4 H18 V18 H6 Z"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Fill="Transparent"/>
                                <Path Data="M9 4 V10 H15 V4 Z"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Fill="Transparent"/>
                                <Path Data="M10 14 H14"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                            </Canvas>
                        </Viewbox>
                        
                        <!-- Icono Actualizar (Oculto por defecto) -->
                        <Viewbox x:Name="IconoActualizar" Width="16" Height="16" Margin="0,0,5,0" Visibility="Collapsed">
                            <Canvas Width="24" Height="24">
                                <Path Data="M21 12a9 9 0 1 1-9-9c2.52 0 4.85.99 6.62 2.6L21 8"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      StrokeStartLineCap="Round"
                                      Fill="Transparent"/>
                                <Path Data="M21 3v5h-5"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      StrokeStartLineCap="Round"
                                      Fill="Transparent"/>
                            </Canvas>
                        </Viewbox>

                        <TextBlock x:Name="GuardarButtonText" 
                                   Text="Guardar Registro"
                                   Foreground="White"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>