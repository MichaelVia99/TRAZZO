<Window x:Class="Bitacora.Views.TiempoEstimadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asignar Tiempo" Height="160" Width="210"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">
    <Grid Margin="0" >
        <Border CornerRadius="0" 
                Background="{StaticResource GlassBackground}"
                BorderBrush="{StaticResource GlassBorder}"
                BorderThickness="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Direction="270" Color="Black" Opacity="0.15"/>
            </Border.Effect>

            <Grid Margin="15" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="Asignar Tiempo" 
                           FontSize="11" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,15"
                           HorizontalAlignment="Left"/>

                <!-- Content (Inputs) -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Horas -->
                    <StackPanel Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" CornerRadius="4,0,0,4"
                                    Background="{StaticResource CardGrayBrush}"
                                    BorderThickness="1,1,0,1"
                                    BorderBrush="{StaticResource NeutralBorderBrush}"
                                    Padding="1">
                                <TextBox x:Name="HorasTextBox" 
                                         Padding="4"
                                         FontSize="10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{StaticResource TextPrimary}"
                                         MaxLength="3"
                                         PreviewTextInput="NumberValidationTextBox"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Center"
                                         Text="0"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1">
                                <Button Click="BtnIncreaseHours_Click" Height="14" Width="20" Background="{StaticResource CardGrayBrush}" BorderBrush="{StaticResource NeutralBorderBrush}" BorderThickness="0,1,1,0" Padding="0" Cursor="Hand">
                                    <Viewbox Width="10" Height="10">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M12 6 L12 18"
                                              Stroke="#666"
                                              StrokeThickness="2"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"/>
                                                                            <Path Data="M6 12 L18 12"
                                              Stroke="#666"
                                              StrokeThickness="2"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                                <Button Click="BtnDecreaseHours_Click" Height="14" Width="20" Background="{StaticResource CardGrayBrush}" BorderBrush="{StaticResource NeutralBorderBrush}" BorderThickness="0,1,1,1" Padding="0" Cursor="Hand">
                                    <Viewbox Width="10" Height="10">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M6 12 L18 12"
              Stroke="#666"
              StrokeThickness="2"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <TextBlock Text="Horas" 
           FontSize="9" 
           Foreground="{StaticResource TextSecondary}"
           Margin="0,0,0,0"
           HorizontalAlignment="Right"/>
                    </StackPanel>

                    <!-- Minutos -->
                    <StackPanel Grid.Column="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" CornerRadius="4,0,0,4"
                                    Background="{StaticResource CardGrayBrush}"
                                    BorderThickness="1,1,0,1"
                                    BorderBrush="{StaticResource NeutralBorderBrush}"
                                    Padding="1">
                                <TextBox x:Name="MinutosTextBox" 
                                         Padding="4"
                                         FontSize="10"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{StaticResource TextPrimary}"
                                         MaxLength="2"
                                         PreviewTextInput="NumberValidationTextBox"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Center"
                                         Text="0"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1">
                                <Button Click="BtnIncreaseMinutes_Click" Height="14" Width="20" Background="{StaticResource CardGrayBrush}" BorderBrush="{StaticResource NeutralBorderBrush}" BorderThickness="0,1,1,0" Padding="0" Cursor="Hand">
                                    <Viewbox Width="10" Height="10">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M12 6 L12 18"
              Stroke="#666"
              StrokeThickness="2"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"/>
                                            <Path Data="M6 12 L18 12"
              Stroke="#666"
              StrokeThickness="2"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                                <Button Click="BtnDecreaseMinutes_Click" Height="14" Width="20" Background="{StaticResource CardGrayBrush}" BorderBrush="{StaticResource NeutralBorderBrush}" BorderThickness="0,1,1,1" Padding="0" Cursor="Hand">
                                    <Viewbox Width="10" Height="10">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M6 12 L18 12"
              Stroke="#666"
              StrokeThickness="2"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <TextBlock Text="Minutos" 
           FontSize="9" 
           Foreground="{StaticResource TextSecondary}"
           Margin="0,0,0,0"
           HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <!-- Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Button x:Name="CancelarButton"
                            IsCancel="True"
                            Click="Cancelar_Click"
                            Margin="0,0,10,0"
                            Background="{StaticResource SecundaryButtonBackground}"
                            BorderThickness="0"
                            Cursor="Hand" Width="80">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Viewbox Width="16" Height="16" Margin="0,0,5,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M6 6 L18 18"
                                          Stroke="{StaticResource TextSecondary}"
                                          StrokeThickness="2"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"/>
                                    <Path Data="M6 18 L18 6"
                                          Stroke="{StaticResource TextSecondary}"
                                          StrokeThickness="2"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Cancelar"
                                       Foreground="{StaticResource TextSecondary}"
                                       FontSize="10"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="AsignarButton"
                            IsDefault="True"
                            Click="Guardar_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Center"
                            MinWidth="0"
                            Width="80">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Viewbox Width="16" Height="16" Margin="0,0,5,0">
                                <Canvas Width="22" Height="22">
                                    <Path Data="M6 4 H18 V18 H6 Z"
                                          Stroke="White"
                                          StrokeThickness="2"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          Fill="Transparent"/>
                                    <Path Data="M9 4 V10 H15 V4 Z"
                                          Stroke="White"
                                          StrokeThickness="2"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          Fill="Transparent"/>
                                    <Path Data="M10 14 H14"
                                          Stroke="White"
                                          StrokeThickness="2"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Guardar"
                                       Foreground="White"
                                       FontSize="10"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
