<Window x:Class="Bitacora.Views.FilePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Vista Previa" Height="800" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Estilo para botones circulares de herramientas -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#55FFFFFF" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Contenedor para Imagen -->
        <Grid x:Name="ImageContainer" Visibility="Collapsed">
            <ScrollViewer x:Name="ImageScrollViewer" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          Background="Transparent"
                          PreviewMouseWheel="ImageScrollViewer_PreviewMouseWheel">
                <Image x:Name="PreviewImage" Stretch="Uniform" Margin="20">
                    <Image.LayoutTransform>
                        <ScaleTransform x:Name="ImageScaleTransform"/>
                    </Image.LayoutTransform>
                </Image>
            </ScrollViewer>

            <!-- Barra de herramientas flotante moderna para Zoom -->
            <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                    Margin="0,0,0,30"
                    Background="#6E2D2D2D" 
                    CornerRadius="24"
                    Padding="15,8"
                    Effect="{StaticResource MaterialShadow}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    
                    <Button Style="{StaticResource ToolbarButtonStyle}" Click="ZoomOut_Click" ToolTip="Reducir">
                        <Viewbox Width="16" Height="16">
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="12" Height="12"
                                         Stroke="White"
                                         StrokeThickness="2"
                                         Canvas.Left="4"
                                         Canvas.Top="4"/>
                                <Path Data="M10 10 L14 10"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                                <Path Data="M15 15 L20 20"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <!-- Slider de Zoom -->
                    <Slider x:Name="ZoomSlider" 
                            Width="150" 
                            Minimum="0.1" 
                            Maximum="5.0" 
                            Value="1.0" 
                            VerticalAlignment="Center" 
                            Margin="10,0"
                            ValueChanged="ZoomSlider_ValueChanged"/>
                    
                    <!-- Porcentaje de Zoom -->
                    <TextBlock x:Name="ZoomPercentageText" 
                               Text="100%" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Width="40" 
                               TextAlignment="Center"
                               FontSize="13"
                               Margin="0,0,10,0"/>

                    <Button Style="{StaticResource ToolbarButtonStyle}" Click="ZoomIn_Click" ToolTip="Aumentar">
                        <Viewbox Width="16" Height="16">
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="12" Height="12"
                                         Stroke="White"
                                         StrokeThickness="2"
                                         Canvas.Left="4"
                                         Canvas.Top="4"/>
                                <Path Data="M10 8 L10 12"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                                <Path Data="M8 10 L12 10"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                                <Path Data="M15 15 L20 20"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <Button Style="{StaticResource ToolbarButtonStyle}" Click="FitToScreen_Click" ToolTip="Ajustar a ventana">
                        <Viewbox Width="16" Height="16">
                            <Canvas Width="24" Height="24">
                                <Path Data="M4 9 L4 4 L9 4"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"/>
                                <Path Data="M15 4 L20 4 L20 9"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"/>
                                <Path Data="M4 15 L4 20 L9 20"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"/>
                                <Path Data="M15 20 L20 20 L20 15"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Contenedor para PDF (WebView2) -->
        <Grid x:Name="PdfContainer" Visibility="Collapsed">
            <wv2:WebView2 x:Name="PdfWebView" />
            
            <!-- Fallback / External Open Button (Overlay if needed, or top bar) -->
            <!-- En WebView2 el PDF viewer nativo ya tiene controles, pero agregamos una opciÃ³n extra arriba si falla -->
            <Border VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20"
                    Background="#CC2D2D2D" CornerRadius="8" Padding="10,5">
                <Button Content="Abrir Externamente" 
                        Foreground="White" Background="Transparent" BorderThickness="0"
                        Click="OpenExternal_Click" Cursor="Hand"/>
            </Border>
        </Grid>

        <!-- Loading Indicator -->
        <Grid x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed">
            <ProgressBar IsIndeterminate="True" Width="200" Height="4" VerticalAlignment="Center"/>
            <TextBlock Text="Cargando..." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0"/>
        </Grid>
    </Grid>
</Window>
