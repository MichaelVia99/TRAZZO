<UserControl x:Class="Bitacora.Views.DashboardDevView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Bitacora.Models"
             Background="Transparent">
    <Grid Margin="20,10,20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="5" Padding="10" CornerRadius="10" Background="{StaticResource CardBackground}">
                <StackPanel>
                    <TextBlock Text="Total Registros" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="TotalText" Text="0" FontSize="19" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="5" Padding="10" CornerRadius="10" Background="{StaticResource CardBackground}">
                <StackPanel>
                    <TextBlock Text="Pendientes" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                    <TextBlock x:Name="PendientesText" Text="0" FontSize="19" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="1" Margin="5" Padding="10" CornerRadius="10" Background="{StaticResource CardBackground}">
            <StackPanel>
                <TextBlock Text="Registro activo" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                <Border x:Name="RegistroActivoBorder" Margin="0,5,0,0" Padding="8" CornerRadius="8" Background="{StaticResource GlassBackground}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock x:Name="RegistroActivoTitulo" Text="Sin registro activo" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock x:Name="RegistroActivoTiempo" Text="00:00:00" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
