<Window x:Class="Bitacora.Views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Bitacora.Views"
        Title="BitÃ¡cora"
        Height="400"
        Width="700"
        MinWidth="600"
        MinHeight="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0" Background="Transparent">
        <Border CornerRadius="10" 
                Background="{StaticResource GlassBackground}"
                BorderBrush="{StaticResource GlassBorder}"
                BorderThickness="6"
                Effect="{StaticResource ElevatedShadow}"
                ClipToBounds="True"
                Margin="0">
            <Grid>
                <Grid x:Name="ContentGrid" Background="Transparent" Margin="0">
                </Grid>
                
                <!-- Contenedor de Notificaciones -->
                <StackPanel x:Name="NotificationContainer" 
                            VerticalAlignment="Bottom" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,20,20"
                            Panel.ZIndex="1000"/>
            </Grid>
        </Border>
    </Grid>
</Window>
